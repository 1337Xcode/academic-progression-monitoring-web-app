<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header', { title: title || 'Error' , hideLogout: true }) %>
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-8">
                    <div class="box has-text-centered py-5">
                        <div class="mb-4">
                            <span class="icon is-large has-text-danger">
                                <i class="fas fa-exclamation-circle fa-3x"></i>
                            </span>
                        </div>
                        <h1 class="title has-text-danger">
                            <%= title %>
                        </h1>
                        <p class="subtitle mb-5">
                            <%= message %>
                        </p>
                        <div class="buttons is-centered mt-5">
                            <a href="javascript:history.back()" class="button is-medium is-light">
                                <span class="icon">
                                    <i class="fas fa-arrow-left"></i>
                                </span>
                                <span>Go Back</span>
                            </a>
                            <a href="/" class="button is-medium is-primary">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span>Go Home</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
<%- include('./partials/footer') %>